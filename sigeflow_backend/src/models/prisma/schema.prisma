generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supply {
  id             String   @id @default(uuid())
  name           String
  unit           String
  minStock       Int
  supplierName   String
  contractNumber String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  stockMovements StockMovement[]
}


model StockMovement {
  id         String   @id @default(uuid())
  type       MovementType
  quantity   Float
  date       DateTime
  note       String?
  createdAt  DateTime @default(now())

  // Relations
  supply     Supply   @relation(fields: [supplyId], references: [id])
  supplyId   String
}

enum MovementType {
  entry
  exit
}
